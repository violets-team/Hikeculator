<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:backgroundTint="@color/color_header_snack"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="20dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_username_bag_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Александр"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_email_bag_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="alex@gmail.com"
        android:textColor="@color/colorSecondary50"
        card_view:layout_constraintStart_toStartOf="@+id/tv_username_bag_header"
        card_view:layout_constraintTop_toBottomOf="@+id/tv_username_bag_header" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="добавил:"
        android:textColor="@color/white"
        card_view:layout_constraintBottom_toBottomOf="@+id/tv_username_bag_header"
        card_view:layout_constraintStart_toEndOf="@+id/tv_username_bag_header"
        card_view:layout_constraintTop_toTopOf="@+id/tv_username_bag_header" />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>